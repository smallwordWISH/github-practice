<h3>Edit Profile</h3>
<%= form_for @user, :url => user_path(@user)  do |f| %>
  <h2>
  <%= f.label :firstname, "First Name" %>
  <%= f.text_field :firstname %>

  <%= f.label :lastname, "Last Name" %>
  <%= f.text_field :lastname %>
  </h2>

  <%= f.label :introself, "自我介紹" %>
  <%= f.text_area :introself %> <br>

  <%= f.label :file_location, "大頭照上傳" %>
  <%= f.text_field :file_location %><br>

  <%= f.submit "Update" %>
<% end %>
